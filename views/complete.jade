extends layout

block content
  div.row
    div.col-md-12.text-center
      if error
        div.alert.alert-danger
          p= error
      else
        div.alert.alert-success
          p Success! Your postcard has been created. You can see a preview here:
            a(href=url, target="_blank")= url

      a.btn.btn-primary(href="/") Create Another Postcard
